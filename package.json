{
  "name": "ve-blog-vite",
  "version": "1.0.0",
  "description": "前后端分离博客系统",
  "author": "791422171@qq.com",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "vite --mode dev --host",
    "dev:test": "vite --mode test --host",
    "dev:prod": "vite --mode prod --host",
    "build": "vue-tsc --noEmit && vite --mode prod build",
    "build:dev": "vue-tsc --noEmit && vite --mode dev build",
    "build:test": "vue-tsc --noEmit && vite --mode test build",
    "preview": "vite preview --host",
    "format": "prettier --write src",
    "mirror:get": "pnpm config get registry",
    "mirror:set": "pnpm config set registry https://registry.pnpmmirror.com",
    "mirror:rm": "pnpm config rm registry",
    "backup": "git add . && git commit -m \"chore: backup\" && git push",
    "up": "npx pnpm-check-updates -u",
    "prepare": "simple-git-hooks",
    "lint-fix": "eslint --fix --ext .js,.ts,.jsx,.tsx,.vue src",
    "lint-prettier": "prettier --write  \"src/**/*.{js,json,tsx,css,less,scss,vue,html,md}\"",
    "lint": "pnpm run lint-prettier && pnpm run lint-fix"
  },
  "dependencies": {
    "@bassist/progress": "^0.2.1",
    "@bassist/utils": "^0.11.2",
    "animate.css": "^4.1.1",
    "axios": "^1.4.0",
    "clipboard": "^2.0.11",
    "cropperjs": "^1.5.13",
    "easy-typer-js": "^2.1.0",
    "element-plus": "^2.3.8",
    "highlight.js": "^11.8.0",
    "js-cookie": "^3.0.5",
    "markdown-it": "^13.0.1",
    "markdown-it-mark": "^3.0.1",
    "nprogress": "^0.2.0",
    "pinia": "^2.1.4",
    "recorderx": "^2.0.2",
    "stylus": "^0.59.0",
    "tocbot": "^4.21.0",
    "vue": "^3.3.4",
    "vue-cropper": "^0.6.2",
    "vue-router": "^4.2.4",
    "vue3-danmaku": "^1.4.0",
    "vue3-photo-preview": "^0.3.0",
    "vuetify": "^3.3.8"
  },
  "devDependencies": {
    "@mdi/font": "^7.2.96",
    "@types/node": "^18.16.19",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitejs/plugin-vue-jsx": "^3.0.1",
    "@vue/eslint-config-prettier": "^7.1.0",
    "eslint": "^8.45.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-vue": "^9.15.1",
    "less": "^4.1.3",
    "lint-staged": "^13.2.3",
    "prettier": "^2.8.8",
    "sass": "^1.63.6",
    "simple-git-hooks": "^2.8.1",
    "typescript": "^5.1.6",
    "unplugin-vue-components": "^0.24.1",
    "vite": "^4.4.4",
    "vite-plugin-banner": "^0.7.0",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-html": "^3.2.0",
    "vue-eslint-parser": "^9.3.1",
    "vue-tsc": "^1.8.5"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged --concurrent false"
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
