{
  "name": "ve-blog-vite",
  "version": "1.0.0",
  "description": "前后端分离博客系统",
  "author": "791422171@qq.com",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --mode dev --host",
    "test": "vite --mode test --host",
    "prod": "vite --mode prod --host",
    "build": "vue-tsc --noEmit && vite --mode prod build",
    "build:dev": "vue-tsc --noEmit && vite --mode dev build",
    "build:test": "vue-tsc --noEmit && vite --mode test build",
    "preview": "vite preview --host",
    "format": "prettier --write src",
    "mirror:get": "pnpm config get registry",
    "mirror:set": "pnpm config set registry https://registry.pnpmmirror.com",
    "mirror:rm": "pnpm config rm registry",
    "backup": "git add . && git commit -m \"chore: backup\" && git push",
    "up": "npx pnpm-check-updates -u",
    "prepare": "",
    "lint-fix": "eslint --fix --ext .js,.ts,.jsx,.tsx,.vue src",
    "lint-prettier": "prettier --write  \"src/**/*.{js,json,tsx,css,less,scss,vue,html,md}\"",
    "lint": "pnpm run lint-prettier && pnpm run lint-fix"
  },
  "dependencies": {
    "@bassist/progress": "^0.2.2",
    "@bassist/utils": "^0.16.0",
    "@vueuse/motion": "^2.1.0",
    "animate.css": "^4.1.1",
    "axios": "^1.6.8",
    "clipboard": "^2.0.11",
    "cropperjs": "^1.6.2",
    "crypto-js": "^4.2.0",
    "dayjs": "^1.11.11",
    "easy-typer-js": "^2.1.0",
    "element-plus": "^2.7.3",
    "highlight.js": "^11.9.0",
    "js-cookie": "^3.0.5",
    "markdown-it": "^14.1.0",
    "markdown-it-mark": "^4.0.0",
    "nprogress": "^0.2.0",
    "pinia": "^2.1.7",
    "recorderx": "^2.0.2",
    "tocbot": "^4.27.20",
    "vue": "^3.4.27",
    "vue-cropper": "^1.1.2",
    "vue-i18n": "^9.13.1",
    "vue-router": "^4.3.2",
    "vue3-danmaku": "^1.6.0",
    "vue3-photo-preview": "^0.3.0",
    "vuetify": "^3.6.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.2.0",
    "@iconify-icons/ep": "^1.2.12",
    "@iconify-icons/ri": "^1.2.10",
    "@iconify/vue": "^4.1.2",
    "@mdi/font": "^7.4.47",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "autoprefixer": "^10.4.19",
    "boxen": "^7.1.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-define-config": "^2.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-vue": "^9.26.0",
    "gradient-string": "^2.0.2",
    "less": "^4.2.0",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.38",
    "postcss-html": "^1.7.0",
    "postcss-import": "^16.1.0",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.2.5",
    "sass": "^1.77.1",
    "simple-git-hooks": "^2.11.1",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5",
    "unplugin-auto-import": "^0.17.6",
    "unplugin-vue-components": "^0.24.1",
    "vite": "^5.2.11",
    "vite-plugin-banner": "^0.7.1",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-html": "^3.2.2",
    "vue-eslint-parser": "^9.4.2",
    "vue-tsc": "^2.0.17"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged --concurrent false"
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
