{
  "name": "ve-blog-vite",
  "version": "1.0.0",
  "description": "前后端分离博客系统",
  "author": "791422171@qq.com",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "vite --mode dev --host",
    "test": "vite --mode test --host",
    "prod": "vite --mode prod --host",
    "build": "vue-tsc --noEmit && vite --mode prod build",
    "build:dev": "vue-tsc --noEmit && vite --mode dev build",
    "build:test": "vue-tsc --noEmit && vite --mode test build",
    "preview": "vite preview --host",
    "format": "prettier --write src",
    "mirror:get": "pnpm config get registry",
    "mirror:set": "pnpm config set registry https://registry.pnpmmirror.com",
    "mirror:rm": "pnpm config rm registry",
    "backup": "git add . && git commit -m \"chore: backup\" && git push",
    "up": "npx pnpm-check-updates -u",
    "prepare": "simple-git-hooks",
    "lint-fix": "eslint --fix --ext .js,.ts,.jsx,.tsx,.vue src",
    "lint-prettier": "prettier --write  \"src/**/*.{js,json,tsx,css,less,scss,vue,html,md}\"",
    "lint": "pnpm run lint-prettier && pnpm run lint-fix"
  },
  "dependencies": {
    "@bassist/progress": "^0.2.2",
    "@bassist/utils": "^0.16.0",
    "animate.css": "^4.1.1",
    "axios": "^1.6.7",
    "clipboard": "^2.0.11",
    "cropperjs": "^1.6.1",
    "dayjs": "^1.11.10",
    "easy-typer-js": "^2.1.0",
    "element-plus": "^2.6.1",
    "highlight.js": "^11.9.0",
    "js-cookie": "^3.0.5",
    "markdown-it": "^14.0.0",
    "markdown-it-mark": "^4.0.0",
    "nprogress": "^0.2.0",
    "picocolors": "^1.0.0",
    "pinia": "^2.1.7",
    "recorderx": "^2.0.2",
    "tocbot": "^4.25.0",
    "vue": "^3.4.21",
    "vue-cropper": "^0.6.4",
    "vue-router": "^4.3.0",
    "vue3-danmaku": "^1.6.0",
    "vue3-photo-preview": "^0.3.0",
    "vuetify": "^3.5.9"
  },
  "devDependencies": {
    "@mdi/font": "^7.4.47",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^20.11.27",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-vue": "^9.23.0",
    "less": "^4.2.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "sass": "^1.72.0",
    "simple-git-hooks": "^2.10.0",
    "typescript": "^5.4.2",
    "unplugin-vue-components": "^0.24.1",
    "vite": "^5.1.6",
    "vite-plugin-banner": "^0.7.1",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-html": "^3.2.2",
    "vue-eslint-parser": "^9.4.2",
    "vue-tsc": "^2.0.6"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged --concurrent false"
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
